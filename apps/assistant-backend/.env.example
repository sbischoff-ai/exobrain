# Local environment configuration for assistant-backend.
# Copy this file to .env for local development.

APP_ENV=local
MAIN_AGENT_MODEL=gpt-5.2
MAIN_AGENT_TEMPERATURE=0.0
MAIN_AGENT_SYSTEM_PROMPT=You are Exobrain Assistant, a helpful general assistant.
MAIN_AGENT_USE_MOCK=false
MAIN_AGENT_MOCK_MESSAGES_FILE=mock-data/main-agent-messages.md
WEB_TOOLS_USE_MOCK=false
WEB_TOOLS_MOCK_DATA_FILE=mock-data/web-tools.mock.json

ASSISTANT_DB_DSN=postgresql://assistant_backend:assistant_backend@localhost:15432/assistant_db
ASSISTANT_CACHE_REDIS_URL=redis://localhost:16379/0
ASSISTANT_CACHE_KEY_PREFIX=assistant:sessions
ASSISTANT_JOURNAL_CACHE_KEY_PREFIX=assistant:journal-cache
ASSISTANT_JOURNAL_CACHE_ENTRY_TTL_SECONDS=30
ASSISTANT_JOURNAL_CACHE_MESSAGES_TTL_SECONDS=20
ASSISTANT_JOURNAL_CACHE_LIST_TTL_SECONDS=20
ASSISTANT_JOURNAL_CACHE_NEGATIVE_TTL_SECONDS=8
ASSISTANT_JOURNAL_CACHE_JITTER_MAX_SECONDS=5
AUTH_JWT_SECRET=dev-secret-change-me
AUTH_JWT_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_TTL_SECONDS=900
AUTH_REFRESH_TOKEN_TTL_SECONDS=604800
AUTH_COOKIE_NAME=exobrain_session
RESHAPE_SCHEMA_QUERY=

# OPENAI_API_KEY must be provided by your environment secrets, for example:
# export OPENAI_API_KEY="..."

# TAVILY_API_KEY must be provided by your environment secrets when web tools are enabled, for example:
# export TAVILY_API_KEY="..."
